{"legislative_session": "2025", "identifier": "HB215", "title": "RELATING TO MEDICAL INFORMED CONSENT.", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": ["Hawaii Medical Board", "Medical Informed Consent", "Standards", "Timing"], "abstracts": [{"note": "description", "abstract": "Requires the Hawaii Medical Board to establish standards for health care providers to ensure that a patient's consent to treatment is an informed consent.  Requires that informed consent for a proposed medical or surgical treatment or a diagnostic or therapeutic procedure shall be obtained before the day of that treatment or procedure.  Specifies that if the treatment or procedure is to occur on the same day it is scheduled, the informed consent shall be obtained at the time the decision is made to schedule that treatment or procedure."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Referred to HLT, CPC, JHA, referral sheet 1", "date": "2025-01-21", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": [{"name": "Health", "entity_type": "organization", "organization_id": null}, {"name": "Consumer Protection & Commerce", "entity_type": "organization", "organization_id": null}, {"name": "Judiciary & Hawaiian Affairs", "entity_type": "organization", "organization_id": null}]}, {"description": "Introduced and Pass First Reading.", "date": "2025-01-16", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["introduction", "reading-1"], "related_entities": []}, {"description": "Pending introduction.", "date": "2025-01-15", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "TAKAYAMA", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"TAKAYAMA\"}", "organization_id": null}, {"name": "MARTEN", "classification": "pri